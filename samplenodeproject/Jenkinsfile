pipeline {
    agent any

    stages {
        stage('Initialize') {
            steps {
                echo 'Starting pipeline'
            }
        }

        stage('Run Stages in Subdirectory') {
            steps {
                script {
                    // Define the helper function
                    def runInMyDir = { stageName, body ->
                        stage(stageName) {
                            dir('samplenodeproject') {
                                body()
                            }
                        }
                    }

                    // Use the helper to define multiple stages inside 'my/dir'
                    runInMyDir('Set Docker Env for Minikube') {
                        env.DOCKER_ENV = sh(script: 'minikube docker-env --shell bash', returnStdout: true).trim()
                        sh "${env.DOCKER_ENV}"
                    }

                    runInMyDir('Build Docker Image') {
                        sh 'eval $(minikube docker-env) && docker build -t express-app .'
                    }

                    runInMyDir('Test') {
                        echo 'testing...'
                        sh 'docker inspect --type=image nodeapp:latest '

                    }

                    runInMyDir('Deploy') {
                        sh 'kubectl apply -f deployment.yaml'
                    }

                    // runInMyDir('Deploy') {
                    //     sh 'docker run -d --name nodeappcontainer -p 5000:5000  nodeapp:latest'
                    // }
                }
            }
        }
    }



}
